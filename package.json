{
  "name": "hashmyjs",
  "version": "1.1.1",
  "description": "A simple NodeJS JS file/code hasher.",
  "main": "hashmyjs.js",
  "bin": {
    "hashmyjs": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "debug": "DEBUG=true node index.js",
    "test": "jest",
    "test-debug": "node-debug --nodejs --harmony ./node_modules/jest-cli/bin/jest.js --runInBand",
    "lint": "eslint -c ./config/.eslintrc.js *.js src/*.js",
    "doc": "jsdoc -c ./config/.jsdocrc",
    "fmt": "eslint -c ./config/.eslintrc.js *.js src/*.js --fix",
    "flowchart": "js2flowchart",
    "cc": "cr -c ./config/.complexrc",
    "cc:all": "npm run cc *.js src/*.js",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG.md -s -r 0",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Berkmann18/hashmyjs.git"
  },
  "keywords": [
    "hash",
    "integrity",
    "node",
    "js",
    "javascript",
    "SHA-256",
    "base64",
    "encode",
    "cli",
    "digest"
  ],
  "author": "Berkmann18",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Berkmann18/hashmyjs/issues"
  },
  "homepage": "https://github.com/Berkmann18/hashmyjs#readme",
  "dependencies": {
    "colors": "^1.3.1",
    "commander": "^2.17.1",
    "jest-environment-node-debug": "^2.0.0",
    "node-debug": "^0.1.0",
    "sjcl": "^1.0.7",
    "test-console": "^1.1.0"
  },
  "devDependencies": {
    "eslint": "^5.3.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^23.5.0",
    "jest-cli": "^23.5.0",
    "js2flowchart": "^1.1.3",
    "mock-stdin": "^0.3.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js",
      "test/*.js",
      "!**/node_modules/**",
      "!**/_*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 50,
        "statements": 50
      }
    },
    "testEnvironment": "node"
  }
}
