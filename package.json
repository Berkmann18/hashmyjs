{
  "name": "hashmyjs",
  "version": "2.0.0",
  "description": "A simple NodeJS JS file/code hasher.",
  "main": "hashmyjs.js",
  "bin": {
    "hashmyjs": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "debug": "DEBUG=true node index.js",
    "test": "jest",
    "test-debug": "node --inspect-brk ./node_modules/.bin/jest -i --env jest-environment-node-debug",
    "lint": "eslint -c ./config/.eslintrc.js *.js src/*.js",
    "doc:lint": "documentation lint src/**",
    "doc:html": "documentation build src/** -f html -o doc/",
    "doc:md": "documentation build src/** -f md -o DOCUMENTATION.md",
    "doc": "npm run doc:lint && npm run doc:html && npm run doc:md",
    "fmt": "eslint -c ./config/.eslintrc.js *.js src/*.js --fix",
    "flowchart": "js2flowchart",
    "cc": "cr -c ./config/.complexrc",
    "cc:all": "npm run cc *.js src/*.js",
    "changelog": "conventional-changelog -p eslint -i CHANGELOG.md -s -r 0",
    "version": "npm run changelog && git add CHANGELOG.md",
    "commit": "git-cz",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Berkmann18/hashmyjs.git"
  },
  "keywords": [
    "hash",
    "integrity",
    "node",
    "js",
    "javascript",
    "SHA-256",
    "base64",
    "encode",
    "cli",
    "digest"
  ],
  "author": "Berkmann18",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Berkmann18/hashmyjs/issues"
  },
  "homepage": "https://github.com/Berkmann18/hashmyjs#readme",
  "dependencies": {
    "colors": "^1.3.2",
    "commander": "^2.19.0",
    "nclr": "^1.0.1",
    "sjcl": "^1.0.7",
    "test-console": "^1.1.0"
  },
  "devDependencies": {
    "cz-adapter-eslint": "^0.1.2",
    "documentation": "^8.1.2",
    "eslint": "^5.8.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "jest-environment-node-debug": "^2.0.0",
    "js2flowchart": "^1.1.7",
    "lint-staged": "^8.0.4",
    "mock-stdin": "^0.3.1",
    "remark-cli": "^6.0.0",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-recommended": "^3.0.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js",
      "test/*.js",
      "!**/node_modules/**",
      "!**/_*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 50,
        "statements": 50
      }
    },
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-adapter-eslint"
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      "remark-preset-lint-consistent"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint -c ./config/.eslintrc.js --fix",
      "jest --bail --findRelatedTests",
      "git add"
    ],
    "*.md": [
      "remark",
      "git add"
    ]
  }
}
