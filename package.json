{
  "name": "hashmyjs",
  "version": "2.0.1",
  "description": "A simple NodeJS JS file/code hasher.",
  "main": "hashmyjs.js",
  "bin": {
    "hashmyjs": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "debug": "DEBUG=true node index.js",
    "test": "snyk test && jest",
    "test-debug": "node --inspect-brk ./node_modules/.bin/jest -i --env jest-environment-node-debug",
    "lint:js": "eslint -c ./config/.eslintrc.js *.js {src,test}/*.js",
    "doc:lint": "documentation lint src/**",
    "doc:html": "documentation build src/** -f html -o doc/",
    "doc:md": "documentation build src/** -f md -o DOCUMENTATION.md",
    "doc": "npm run doc:lint && npm run doc:html && npm run doc:md",
    "fmt": "eslint -c ./config/.eslintrc.js *.js {src,test}/*.js --fix",
    "flowchart": "js2flowchart",
    "cc": "cr -c ./config/.complexrc",
    "cc:all": "npm run cc *.js src/*.js",
    "commit": "git-cz",
    "lint-staged": "lint-staged",
    "lint:md": "remark . .github -i ./config/.remarkignore",
    "lint": "npm run fmt && npm run lint:md",
    "semantic-release": "semantic-release",
    "prepare": "snyk protect",
    "contribs:add": "all-contributors add",
    "contribs:generate": "all-contributors generate",
    "contribs:check": "all-contributors check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Berkmann18/hashmyjs.git"
  },
  "keywords": [
    "hash",
    "integrity",
    "node",
    "js",
    "javascript",
    "SHA-256",
    "base64",
    "encode",
    "cli",
    "digest"
  ],
  "author": {
    "name": "Maximilian Berkmann",
    "email": "maxieberkmann@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Berkmann18/hashmyjs/issues"
  },
  "homepage": "https://github.com/Berkmann18/hashmyjs#readme",
  "dependencies": {
    "colors": "^1.3.2",
    "commander": "^2.19.0",
    "nclr": "^1.2.0",
    "sjcl": "^1.0.7"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/git": "^7.0.5",
    "all-contributors-cli": "^5.6.1",
    "conventional-changelog-eslint": "^3.0.1",
    "cz-adapter-eslint": "^0.1.2",
    "documentation": "^8.1.2",
    "eslint": "^5.8.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.4.0",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "jest-environment-node-debug": "^2.0.0",
    "js2flowchart": "^1.1.7",
    "lint-staged": "^8.0.4",
    "mock-stdin": "^0.3.1",
    "remark-cli": "^6.0.0",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "semantic-release": "^15.10.8",
    "snyk": "^1.120.1",
    "test-console": "^1.1.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js",
      "test/*.js",
      "!**/node_modules/**",
      "!**/_*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 90,
        "lines": 50,
        "statements": 50
      }
    },
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-adapter-eslint"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint -c ./config/.eslintrc.js --fix",
      "jest --bail --findRelatedTests",
      "git add"
    ],
    "*.md": [
      "remark",
      "git add"
    ]
  }
}
